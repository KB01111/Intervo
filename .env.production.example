# Production Environment Variables for Dokploy Deployment
# Copy this file to .env.production and fill in your actual values

# =============================================================================
# CORE APPLICATION SETTINGS
# =============================================================================
NODE_ENV=production
BASE_URL=https://api.yourdomain.com
FRONTEND_URL=https://app.yourdomain.com

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# MongoDB connection (using internal Docker network)
MONGO_URI=mongodb://admin:password123@mongodb:27017/intervo?authSource=admin

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
# Generate a strong JWT secret (use: openssl rand -base64 32)
JWT_SECRET=your_super_secure_jwt_secret_key_here_32_chars_min

# Session secret for Express sessions
SESSION_SECRET=your_session_secret_key_here

# Encryption key for sensitive data
ENCRYPTION_KEY=your_encryption_key_here

# NextAuth secret (for frontend authentication)
NEXTAUTH_SECRET=your_nextauth_secret_key_here

# =============================================================================
# TWILIO CONFIGURATION (Required for phone functionality)
# =============================================================================
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_API_KEY=your_twilio_api_key
TWILIO_API_SECRET=your_twilio_api_secret
TWILIO_APP_SID=your_twilio_app_sid
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# =============================================================================
# AI SERVICES API KEYS
# =============================================================================
# OpenAI
OPENAI_API_KEY=your_openai_api_key

# Groq
GROQ_API_KEY=your_groq_api_key

# Google AI
GOOGLE_API_KEY=your_google_api_key

# DeepSeek
DEEP_SEEK_API_KEY=your_deep_seek_api_key

# =============================================================================
# SPEECH-TO-TEXT SERVICES
# =============================================================================
# Deepgram
DEEPGRAM_API_KEY=your_deepgram_api_key

# AssemblyAI
ASSEMBLYAI_API_KEY=your_assemblyai_api_key

# Google Speech-to-Text (provide path to credentials JSON file)
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/google-credentials.json

# =============================================================================
# TEXT-TO-SPEECH SERVICES
# =============================================================================
# AWS Polly
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-east-1

# Azure Speech
AZURE_SPEECH_KEY=your_azure_speech_key
AZURE_SPEECH_REGION=your_azure_region

# =============================================================================
# EMAIL CONFIGURATION (Optional)
# =============================================================================
# SMTP settings for email notifications
SMTP_HOST=your_smtp_host
SMTP_PORT=587
SMTP_USER=your_smtp_username
SMTP_PASS=your_smtp_password
FROM_EMAIL=noreply@yourdomain.com

# =============================================================================
# LOGGING & MONITORING
# =============================================================================
# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Enable/disable request logging
ENABLE_REQUEST_LOGGING=true

# =============================================================================
# RATE LIMITING
# =============================================================================
# Rate limiting settings
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
# Allowed origins for CORS (comma-separated)
ALLOWED_ORIGINS=https://app.yourdomain.com,https://yourdomain.com

# =============================================================================
# FILE UPLOAD SETTINGS
# =============================================================================
# Maximum file size for uploads (in bytes)
MAX_FILE_SIZE=10485760

# Allowed file types (comma-separated)
ALLOWED_FILE_TYPES=.pdf,.doc,.docx,.txt,.md

# =============================================================================
# REDIS CONFIGURATION (Optional - for caching)
# =============================================================================
# REDIS_URL=redis://redis:6379

# =============================================================================
# WEBHOOK CONFIGURATION
# =============================================================================
# Webhook secret for validating incoming webhooks
WEBHOOK_SECRET=your_webhook_secret

# =============================================================================
# DOMAIN CONFIGURATION
# =============================================================================
# Your actual domains (replace yourdomain.com with your domain)
MAIN_DOMAIN=yourdomain.com
APP_DOMAIN=app.yourdomain.com
API_DOMAIN=api.yourdomain.com
RAG_DOMAIN=rag.yourdomain.com
